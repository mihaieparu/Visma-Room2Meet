@model Visma_Room2Meet.Booking

@{
    ViewBag.Title = "Edit an existing booking";
}

<h2>@ViewBag.Title</h2>
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li><a href="@Url.Action("Index", "Bookings")">Bookings</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.BookingID)

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <br />
        <div class="form-group">
            <label class="col-md-2 control-label" for="RoomID">Meeting room</label>
            <div class="col-md-10">
                @Html.DropDownList("RoomID", null, htmlAttributes: new { @class = "form-control" }, optionLabel: "Select a meeting room...")
                @Html.ValidationMessageFor(model => model.RoomID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" for="Date">Meeting date</label>
            <div class="col-md-10">
                <input id="Date" name="Date" class="form-control" type="date" placeholder="Date" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" for="Start">Meeting start</label>
            <div class="col-md-10">
                <input id="Start" name="Start" class="form-control" type="time" placeholder="Start time" value="@Model.StartDate.ToShortTimeString()" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" for="End">Meeting end</label>
            <div class="col-md-10">
                <input id="End" name="End" class="form-control" type="time" placeholder="End time" value="@Model.EndDate.ToShortTimeString()" />
            </div>
        </div>
        <br />
        <center>
            <button type="submit" class="btn btn-primary"><span class="fa fa-fw fa-save"></span> Save booking!</button>
        </center>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
