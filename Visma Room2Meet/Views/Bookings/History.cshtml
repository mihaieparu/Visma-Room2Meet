@model IEnumerable<Visma_Room2Meet.BookingHistory>

@{
    Styles.Render("~/dataTablesStyles");
    ViewBag.Title = "View booking history for an existing booking";
    var userRoleLevel = Visma_Room2Meet.Helpers.User.GetUserRoleOrder(User.Identity.Name); //get current user's role level
}

<style>
    label {
        font-weight: normal;
    }

    .dataTables_wrapper {
        padding-bottom: 0;
        width: calc(100% - 15px);
    }

    .dataTables_filter {
        float: right;
        margin-bottom: 10px;
    }
</style>

<h2>
    @ViewBag.Title
</h2>
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li><a href="@Url.Action("Index", "Bookings")">Bookings</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>

<div class="table-responsive">
    <table class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>Booking</th>
                <th>Change user</th>
                <th>Change date</th>
                <th>Change text</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BookingHistory b in Model.ToList())
            {
                <tr>
                    <td><a href="@Url.Action("Details", "Bookings", new { @id = b.BookingID })" target="_blank"><span class="fa fa-fw fa-external-link"></span> @b.Booking.BookingReference</a></td>
                    <td><a href="@Url.Action("Details", "Users", new { @id = b.AspNetUser.Id })" target="_blank"><span class="fa fa-fw fa-external-link"></span> @b.AspNetUser.UserName</a></td>
                    <td>@b.ChangeDate</td>
                    <td>@b.ChangeText</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @Scripts.Render("~/dataTables");
    <script>
        $(document).ready(function () {
            $(".table").DataTable({
                order: [],
                "pageLength": 50,
            });
        });
        $(".tlt").tooltip();
    </script>
}